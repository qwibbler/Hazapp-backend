<th><%= link_to masla.id, masla %></th>
<% @maslas.column_names[1..].each do |col| %>
  <td><%= if !masla[col].nil? then style_data(masla, col, @limit_answer) end %></td>
<% end %>
<% @more_cols.each do |col| %>
  <td><%= if !masla.info(col).nil? then style_data(masla, col, @limit_answer) end %></td>
<% end %>
<% if current_user&.can_delete %>
  <td><%= button_to "X", masla, method: :delete %></td>
<% end %>
