<p style="color: green"><%= notice %></p>

<h1>Maslas</h1>
<%# TODO: Fix Maslas with no preMasla %>
<table>
  <thead>
    <th></th>
    <th>Id</th>
    <th>Masla</th>
    <th>Input</th>
    <th>answerEnglish</th>
    <th>answerUrdu</th>
    <th>entries</th>
    <th>Created</th>
    <th>Updated</th>
    <th>Delete</th>
    <% @table.columns.each do |col| %>
      <th><%= col.header %></th>
    <% end %>
  </thead>
  <tbody>
    <% @maslas.each do |masla| %>
      <tr>
        <%= render masla %>
        <% if @table.row_headers.include? masla %>
          <% row_data(@table, masla).each do |cell| %>
            <td><%= cell %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New masla", new_masla_path %>
