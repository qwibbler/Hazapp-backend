<section class="container-fluid">
  <p style="color: green"><%= notice %></p>

  <div class="container m-5">
    <h1 class="display-1">Masla <%= @masla.id %></h1>
    <small>Created at: <%= style_date_time(@masla.created_at) %></small>
    <br>
    <small>Updated at: <%= style_date_time(@masla.updated_at) %></small>
  </div>

  <div class="row row-cols-2 gx-5 m-5">
    <div class="col-md">
      <table class="table table-borderless table-sm">
        <h2>Masla Info:</h2>
        <tbody>
          <tr>
            <td><dt class="col">maslaType:</dt></td>
            <td><dd class="col"><%= @masla.typeOfMasla %></dd></td>
          </tr>
          <tr>
            <td>
              <dt class="col">maslaInput:</dt>
            </td>
            <td>
              <dd class="col"><%= @masla.typeOfInput %></dd>
            </td>
          </tr>
          <% @masla.pre_maslas.each do |premasla| %>
            <tr>
              <td>
                <dt class="col"><%= premasla.premasla %>:</dt>
              </td>
              <td>
                <dd class="col"><%= premasla.value == 't' ? 'True' : premasla.value %></dd>
              </td>
            </tr>
          <% end%>
        </tbody>
      </table>
    </div>

    <% unless @masla.entries.empty? %>
      <div class="col-md">
        <table class="table table-borderless table-sm">
          <h2>Entries:</h2>
          <thead>
            <th><h3>Start:</h3></th>
            <th><h3>End:</h3></th>
          </thead>
          <tbody>
            <% style_entries_for_show(@masla.entries).each do |entry| %>
              <tr>
                <td class="col col-auto"><%= entry[0] %></td>
                <td class="col col-auto"><%= entry[1] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>

  <% unless @masla.answerEnglish.blank? %>
    <div class="container m-5">
        <h2>Answers:</h2>
      <div class="row gx-5">
        <div class="col">
          <h3>Urdu:</h3>
          <p><%= simple_format(@masla.answerUrdu) %></p>
        </div>
        <div class="col">
          <h3>English:</h3>
          <p><%= simple_format(@masla.answerEnglish) %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="container m-5">
    <%# link_to "Edit this masla", edit_masla_path(@masla) %> |
    <%= link_to "Back to maslas", maslas_path %>
    <%= button_to "Destroy this masla", @masla, method: :delete %>
  </div>
</section>
