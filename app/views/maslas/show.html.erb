<section class="container-fluid">
  <p style="color: green"><%= notice %></p>

  <div class="container m-5">
    <h1 class="display-1">Masla <%= @masla.id %></h1>
    <small>Created at: <%= style_date_time(@masla.created_at) %></small>
    <br>
    <small>Updated at: <%= style_date_time(@masla.updated_at) %></small>
  </div>

  <div class="container m-5">
    <h2>Masla Info:</h2>
    <dl class="row">
      <dt class="col-sm-4">maslaType:</dt>
      <dd class="col-sm-5"><%= @masla.typeOfMasla %></dd>

      <dt class="col-sm-4">maslaInput:</dt>
      <dd class="col-sm-5"><%= @masla.typeOfInput %></dd>

      <% @masla.pre_maslas.each do |premasla| %>
        <dt class="col-sm-4"><%= premasla.premasla %>:</dt>
        <dd class="col-sm-5"><%= premasla.value == 't' ? 'True' : premasla.value %></dd>
      <% end%>
    </dl>
  </div>

  <% unless @masla.entries.empty? %>
    <div class="container m-5">
      <h2>Entries:</h2>
        <div class="row gx-auto">
          <div class="col col-lg-2"><h3>Start:</h3></div>
          <div class="col col-lg-2"><h3>End:</h3></div>
        </div>
        <% style_entries_for_show(@masla.entries).each do |entry| %>
          <div class="row gx-auto">
            <div class="col col-lg-2"><dd><%= entry[0] %></dd></div>
            <div class="col col-lg-2"><dd><%= entry[1] %></dd></div>
          </div>
        <% end %>
    </div>
  <% end %>

  <% unless @masla.answerEnglish.blank? %>
    <div class="container m-5">
        <h2>Answers:</h2>
      <div class="row gx-5">
        <div class="col">
          <h3>Urdu:</h3>
          <p><%= simple_format(@masla.answerUrdu) %></p>
        </div>
        <div class="col">
          <h3>English:</h3>
          <p><%= simple_format(@masla.answerEnglish) %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="container m-5">
    <%# link_to "Edit this masla", edit_masla_path(@masla) %>
    <%= link_to "Back to maslas", maslas_path, :class => "btn btn-secondary m-1" %>
    <%= button_to "Destroy this masla", @masla, method: :delete, :class => "btn btn-secondary m-1" %>
  </div>
</section>
