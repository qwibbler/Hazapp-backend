<!DOCTYPE html>
<html>
  <head>
    <title>HazappBackend</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="mt-3 mb-3">
      <% if user_signed_in? %>
        <div class="alert alert-success" role="alert">
          Welcome <%= current_user.username.titlecase %>
        </div>
        <div class="btn-group" role="group">
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      <% else %>
        <div class="btn-group" role="group">
          <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary"  %>
      <% end %>
        <%= link_to "All Users", users_path, class: "btn btn-secondary ml-2"  %>
        <%= link_to "All Maslas", root_path, class: "btn btn-secondary ml-2"  %>
      </div>
    </div>

    <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% elsif alert %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>
  </body>

  <%= yield %>
</html>
